<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru_muda"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logolakoni"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/lakoni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/lakoniaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di Lakoni Aja"
        android:shadowColor="@color/shadow"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:shadowDy="10"
        android:shadowRadius="11"
        android:textColor="@color/biru_tua"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logolakoni"
        />

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AYO JAGA KESEHATAN\n MENTALMU!"
        android:layout_marginTop="10dp"
        android:textColor="@color/biru_tua"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/lakoniaja"
        />

    <TextView
        android:id="@+id/keterangan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kamu tidak sendiri, ada kami disini"
        android:layout_marginTop="5dp"
        android:textColor="@color/biru_tua"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/keterangan"
        />

    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/textborder"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keterangan2">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login"
            android:shadowColor="@color/shadow"
            android:shadowDy="10"
            android:shadowRadius="11"
            android:textColor="@color/biru_tua"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Email/Username"
            android:textColor="@color/biru_tua"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/textborder"
            android:hint="nim@student.polije.ac.id/username"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/label_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Password"
            android:textColor="@color/biru_tua"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/matatutup"
            android:background="@drawable/textborder"
            android:hint="Masukkan Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lupapassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Lupa Password?"
            android:textColor="@color/biru_tua"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:onClick="gotoforget"
            />

        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biru_tua"
            android:text="LOGIN"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDy="7"
            android:shadowRadius="7"
            />

        <TextView
            android:id="@+id/textregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Belum punya akun? Daftar"
            android:textColor="@color/biru_tua"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:onClick="gotoregister"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>